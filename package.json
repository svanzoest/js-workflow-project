{
  "name": "@sddevops/js-workflow-project",
  "version": "0.1.0",
  "description": "JavaScript Workflow Project",
  "license": "MIT",
  "private": false,
  "repository": "git@github.com:svanzoest/js-workflow-project.git",
  "homepage": "https://svanzoest.github.io/js-workflow-project/",
  "author": "Sander van Zoest <sander@sddevops.org>",
  "main": "index.js",
  "scripts": {
    "build": "mdx-deck build slides/deck.js",
    "postbuild": "echo 'js-workflow-project.sddevops.org' > dist/CNAME",
    "deploy": "gh-pages -d dist",
    "lint": "prettier --check **/*.{mdx,js}",
    "lint:fix": "prettier --write **/*.{mdx,js} && format-package -w",
    "start": "mdx-deck slides/deck.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,mdx}": [
      "yarn run lint:fix",
      "git add"
    ]
  },
  "prettier": {},
  "dependencies": {},
  "devDependencies": {
    "format-package": "^4.5.1",
    "gh-pages": "^2.0.1",
    "husky": "^2.4.1",
    "lint-staged": ">=8",
    "mdx-deck": "^2.3.2",
    "prettier": "1.18.2"
  }
}
